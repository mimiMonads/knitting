{
  "name": "@vixeny/knitting",
  "version": "0.1.10",
  "description": "Shared-memory worker pool for Node.js, Deno, and Bun.",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./knitting.ts",
  "module": "./knitting.ts",
  "types": "./knitting.ts",
  "exports": {
    ".": "./knitting.ts"
  },
  "files": [
    "README.md",
    "LICENSE",
    "src/**/*.ts",
    "knitting.ts"
  ],
  "scripts": {
    "build": "bun run build.ts",
    "build:node": "bun build knitting.ts --outdir dest --target node --format esm",
    "test": "npm run test:deno",
    "test:deno": "deno test -A --ignore=test/runtime.node.test.ts",
    "test:node": "node --no-warnings --experimental-transform-types --test \"./test/*.test.ts\"",
    "test:bun": "bun test --timeout 10000 test",
    "test:runtimes": "npm run test:node && npm run test:bun",
    "test:all": "npm run test:deno && npm run test:runtimes",
    "coverage:node": "node --no-warnings --experimental-transform-types --experimental-test-coverage --test \"./test/*.test.ts\"",
    "coverage:node:90": "node --no-warnings --experimental-transform-types --experimental-test-coverage --test-coverage-lines=90 --test-coverage-exclude=src/common/others.ts --test-coverage-exclude=src/ipc/protocol/parsers/NumericBuffer.ts --test-coverage-exclude=src/runtime/balancer.ts --test-coverage-exclude=src/worker/get-functions.ts --test \"./test/*.test.ts\"",
    "bench": "./run.sh",
    "bench:json": "./run.sh --json"
  },
  "engines": {
    "node": ">=22.0.0",
    "deno": ">=2.0.0",
    "bun": ">=1.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/deno": "latest",
    "@types/node": "latest",
    "mitata": "^1.0.34"
  }
}
